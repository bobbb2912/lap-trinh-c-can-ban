/*Nhập vào một dãy n số bất kỳ từ bàn phím. Tìm giá trị lớn nhất và nhỏ nhất của dãy số đó. In kết
quả tìm được ra màn hình cùng vị trí của các giá trị max, min trong dãy số.*/

#include <stdio.h>
#include <math.h>
#define N 100
void nhap(int a[], int *n)
{
    *n = 0;
    while(*n <= 0){
        printf("Nhap n>0: ");
        scanf("%d", n);
    }
    for(int i = 0; i < *n; i++){
        printf("a[%d] = ", i);
        scanf("%d", &a[i]);
    }
}

void xuat(int a[], int n)
{
    for(int i = 0; i < n; i++){
        printf("%5d", a[i]);
    }
}

void min_max(int a[], int n)
{
    int min = a[0], max = a[0];

    for(int i = 0; i < n; i++){
        if(a[i] < min) min = a[i];
        if(a[i] > max) max = a[i];
    }
    printf("\nMIN = %d\nMAX = %d", min, max);
}
int main(){
    int a[N], n;
    nhap(a, &n);
    printf("\nDay so: \n");
    xuat(a, n);
    min_max(a, n);
    return 0;
}
